<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout tools:context=".MainActivity"
    android:gravity="center"
    android:background="@color/maneul"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:layout_height="250dp"
        android:layout_width="300dp"
        android:src="@drawable/maneul2"
        android:id="@+id/imageView"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/app_main_font"
        android:gravity="center_horizontal"
        android:text="마음만은 늘 함께"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50sp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView2"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:text="by Six_Man"
        android:fontFamily="@font/app_main_font"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal" />

</LinearLayout>